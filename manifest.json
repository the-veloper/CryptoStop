{
  "manifest_version": 2,
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "name": "MineBlock",
  "description": "This extension blocks crypto-currency mining scripts.",
  "version": "1.0",
  "icons": {
    "128": "images/icon_128.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
	"default_title": "MineBlock - more"
  },
  "permissions": [ "tabs", "storage" ]
}
