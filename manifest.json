{
  "manifest_version": 2,
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "short_name": "__MSG_appName__",
  "version": "2.0",
  "icons": {
    "128": "images/icon.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
	"default_title": "__MSG_appDesc__"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*.js*"],
      "js": ["js/patterns.js"]
    }

  ],
  "permissions": [
        "activeTab",
        "tabs",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ]
}
