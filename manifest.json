{
  "manifest_version": 2,
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "name": "CryptoStop",
  "description": "This extension blocks crypto-currency mining scripts.",
  "short_name": "CryptoStop",
  "version": "1.32",
  "icons": {
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
	"default_title": "CryptoStop - stop cryptocurrency mining on websites"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*.js*"],
      "js": ["js/patterns.js"]
    }

  ],
  "permissions": [
        "activeTab",
        "tabs",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ]
}
